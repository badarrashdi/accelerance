<section class="content-inner-2 wow fadeInUp" style="background-image:url({{ theme.link }}/static/images/background/bg1.png)">
  <div class="container">
    <div class="section-head style-1 text-center">
      <h6 class="sub-title bgl-primary m-b20 text-primary">
        {{ post.meta('services_headline') }}
      </h6>
      <h2 class="title">
        {{ post.meta('services_title') }}
      </h2>
    </div>
    <div class="row">
      {% for item in options.services %}
        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-duration="2s" data-wow-delay="0.2s">
          <div class="icon-bx-wraper style-1 box-hover text-center m-b30">
            <div class="icon-bx-md radius {% if item.image %}bg-green shadow-green{% else %}bg-green shadow-green{% endif %}">
              <a class="icon-cell" href="{{ item.service_link }}">
                {% if item.image %}
                  <img
                src="{{ get_image(item.image).src }}" alt="{{ item.title }}" />
                  {% else %}
                  <i class="{{ item.icon }}"></i>
                {% endif %}
              </a>
            </div>
            <div class="icon-content">
              <h4 class="dlab-title">
                {{ item.title }}
              </h4>
              <p>
                {{ item.description }}
              </p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
